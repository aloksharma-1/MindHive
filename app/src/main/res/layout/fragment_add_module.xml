<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_module_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Module Title"
            android:inputType="text"/>

        <EditText
            android:id="@+id/et_module_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Module Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_theory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Theory Content"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_video_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Video Link (optional)"
            android:inputType="textUri"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quiz (optional)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_add_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Module"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
